generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Highscore {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String   @default("anonymous")
  level     Int      @default(1)
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
